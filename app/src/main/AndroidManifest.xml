<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.sleepinggrizzly.alguardianguyproject">
    <!-- Permissions -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PROJECTION"/>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" />


    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:targetApi="31">

        <!-- Overlay Service -->
        <service
            android:name=".OverlayService"
            android:permission="android.permission.SYSTEM_ALERT_WINDOW"
            android:exported="true"
            android:windowSoftInputMode="adjustNothing|adjustPan|adjustResize|adjustUnspecified|stateAlwaysHidden|stateAlwaysVisible|stateHidden|stateUnchanged|stateUnspecified|stateVisible">
        </service>

        <!-- Screen Record Service -->
        <service
            android:name=".ScreenRecordService"
            android:foregroundServiceType="mediaProjection"
            android:exported="true">
        </service>

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"
            android:supportsPictureInPicture="true"
            android:configChanges="screenSize|smallestScreenSize|screenLayout|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RecordActivity"
            android:theme="@style/AppTheme"
            android:excludeFromRecents="true"
            android:noHistory="true" />
        <activity
            android:name=".debug.ExternalStorageActivity"
            android:theme="@style/AppTheme"
            android:launchMode="singleTask"/>
        <activity
            android:name=".debug.CopyFileService"
            android:theme="@style/AppTheme"
            android:launchMode="standard"/>
        <activity
            android:name=".debug.VideoViewActivity"
            android:theme="@style/AppTheme"
            android:launchMode="standard"/>
        <activity
            android:name=".debug.ExoPlayerActivity"
            android:theme="@style/AppTheme"
            android:launchMode="standard"/>

    </application>
</manifest>
